<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recipe_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream">

    <!-- Recipe Title -->

    <!-- Category Label -->

    <!-- Category Buttons -->
    <!-- Row 1 -->

    <EditText
        android:id="@+id/editTitle"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#B1C29E"
        android:fontFamily="@font/open_sans"
        android:hint="e.g. Grandma's Pie"
        android:padding="12dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TitleLabel" />

    <TextView
        android:id="@+id/CookTimeLabel"
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/kavivanar"
        android:text="Cook Time (mins)"
        android:textColor="@color/maroon"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editPrepTime"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/ServingsLabel"
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/kavivanar"
        android:text="Servings"
        android:textColor="@color/maroon"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSnack"
        app:layout_constraintVertical_bias="0.019" />

    <EditText
        android:id="@+id/editPrepTime"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#B1C29E"
        android:fontFamily="@font/open_sans"
        android:hint="e.g. 15"
        android:inputType="number"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PrepTimeLabel" />

    <Button
        android:id="@+id/btnSnack"
        style="@style/CategoryButton"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:text="Snack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBreakfast" />

    <Button
        android:id="@+id/btnDessert"
        style="@style/CategoryButton"
        android:layout_marginHorizontal="8dp"
        android:text="Dessert"
        app:layout_constraintEnd_toStartOf="@id/btnDrink"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/btnSnack"
        app:layout_constraintTop_toTopOf="@id/btnSnack" />

    <EditText
        android:id="@+id/editCookTime"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#B1C29E"
        android:fontFamily="@font/open_sans"
        android:hint="e.g. 30"
        android:inputType="number"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CookTimeLabel"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnDrink"
        style="@style/CategoryButton"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp"
        android:text="Drink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLunch" />

    <Button
        android:id="@+id/btnLunch"
        style="@style/CategoryButton"
        android:layout_marginHorizontal="8dp"
        android:text="Lunch"
        app:layout_constraintEnd_toStartOf="@id/btnDinner"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/btnBreakfast"
        app:layout_constraintTop_toTopOf="@id/btnBreakfast" />

    <TextView
        android:id="@+id/TitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kavivanar"
        android:text="Recipe Title"
        android:textColor="@color/maroon"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <Button
        android:id="@+id/btnBreakfast"
        style="@style/CategoryButton"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:text="Breakfast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CategoryLabel" />

    <Button
        android:id="@+id/btnDinner"
        style="@style/CategoryButton"
        android:layout_marginEnd="36dp"
        android:text="Dinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBreakfast" />

    <EditText
        android:id="@+id/editServings"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#B1C29E"
        android:fontFamily="@font/open_sans"
        android:hint="e.g. 4"
        android:inputType="number"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ServingsLabel" />

    <TextView
        android:id="@+id/PrepTimeLabel"
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/kavivanar"
        android:text="Prep Time (mins)"
        android:textColor="@color/maroon"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editServings"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/CategoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/kavivanar"
        android:text="Category"
        android:textColor="@color/maroon"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTitle"
        app:layout_constraintVertical_bias="0.013" />

    <!-- Row 2 -->

    <!-- Servings -->

    <!-- Prep Time -->

    <!-- Cook Time -->

    <!-- Next Button -->

    <Button
        android:id="@+id/next_button"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#9A3B3B"
        android:fontFamily="@font/kavivanar"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
