<?xml version="1.0" encoding="utf-8"?>

<!-- root layout using ConstraintLayout for flexible UI positioning -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <!-- poster -->
    <ImageView
        android:id="@+id/pet_poster"
        android:layout_width="500dp"
        android:layout_height="670dp"
        android:src="@drawable/tortoise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- close button -->
    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/close_button_desc"
        android:padding="3dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/pet_poster"
        app:layout_constraintEnd_toEndOf="@+id/pet_poster"
        app:layout_constraintHorizontal_bias="0.798"
        app:layout_constraintStart_toStartOf="@+id/pet_poster"
        app:layout_constraintTop_toTopOf="@+id/pet_poster"
        app:layout_constraintVertical_bias="0.202"
        app:srcCompat="@drawable/close_button_transparent" />

</androidx.constraintlayout.widget.ConstraintLayout>