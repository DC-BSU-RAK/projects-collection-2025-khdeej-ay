<?xml version="1.0" encoding="utf-8"?>

<!-- root layout using ConstraintLayout for flexible UI positioning -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstructionsActivity">

    <!-- instructions  -->
    <ImageView
        android:id="@+id/instructions_text"
        android:layout_width="385dp"
        android:layout_height="405dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003"
        app:srcCompat="@drawable/instructions_horizontal" />

    <!--  close button  -->
    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/close_button_desc"
        android:padding="3dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/instructions_text"
        app:layout_constraintEnd_toEndOf="@+id/instructions_text"
        app:layout_constraintHorizontal_bias="0.863"
        app:layout_constraintStart_toStartOf="@+id/instructions_text"
        app:layout_constraintTop_toTopOf="@+id/instructions_text"
        app:layout_constraintVertical_bias="0.12"
        app:srcCompat="@drawable/close_button_transparent" />


</androidx.constraintlayout.widget.ConstraintLayout>